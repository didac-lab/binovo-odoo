<odoo>
  <!-- blog.blog form -->
  <record id="view_blog_form_company" model="ir.ui.view">
    <field name="name">blog.blog.form.company</field>
    <field name="model">blog.blog</field>
    <field name="inherit_id" ref="website_blog.view_blog_blog_form"/>
    <field name="arch" type="xml">
      <xpath expr="//group" position="inside">
        <field name="company_id"/>
      </xpath>
    </field>
  </record>

  <!-- blog.blog tree -->
  <record id="view_blog_tree_company" model="ir.ui.view">
    <field name="name">blog.blog.tree.company</field>
    <field name="model">blog.blog</field>
    <field name="inherit_id" ref="website_blog.view_blog_blog_list"/>
    <field name="arch" type="xml">
      <xpath expr="//tree" position="inside">
        <field name="company_id"/>
      </xpath>
    </field>
  </record>

  <!-- blog.post form -->
  <record id="view_blog_post_form_company" model="ir.ui.view">
    <field name="name">blog.post.form.company</field>
    <field name="model">blog.post</field>
    <field name="inherit_id" ref="website_blog.view_blog_post_form"/>
    <field name="arch" type="xml">
      <xpath expr="//group" position="inside">
        <field name="company_id" attrs="{'readonly': True}"/>
      </xpath>
    </field>
  </record>

  <!-- blog.post tree -->
  <record id="view_blog_post_tree_company" model="ir.ui.view">
    <field name="name">blog.post.tree.company</field>
    <field name="model">blog.post</field>
    <field name="inherit_id" ref="website_blog.view_blog_post_list"/>
    <field name="arch" type="xml">
      <xpath expr="//tree" position="inside">
        <field name="company_id"/>
      </xpath>
    </field>
  </record>
</odoo>